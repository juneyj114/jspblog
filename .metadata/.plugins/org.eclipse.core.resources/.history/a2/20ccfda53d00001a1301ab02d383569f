    <script>
      const replyJS = {
        id: null,
        boardId: 5,
        userId: 3,
        content: "Hello",
        createDate: null
      };

      function send() {
        // replyJS를 JSON 변환
        const replyStr = JSON.stringify(replyJS);
        // fetch -> /blog/test/reply 에 POST, application/json; utf-8
        async function fetchData() {
          const response = await fetch("/blog/test/reply", {
            method: "POST",
            body: replyStr,
            headers: {
              "Content-type": "application/json; charset=UTF-8"
            }
          });
        }
        console.log(response);
      }
    </script>
